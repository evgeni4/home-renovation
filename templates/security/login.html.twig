{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="cost-calculator-section section fix bg-theme pt-100 pt-lg-80 pt-md-70 pt-sm-60 pt-xs-50">
        <div class="container">

            <div class="row no-gutters">
                <div class="col-lg-2 d-lg-block d-none d-lg-flex align-items-end">
                    <div class="cost-cal-sec-image">
                        <img src="{{ asset('assets/images/bg/cal-sec-img.png') }}" alt="">
                    </div>
                </div>
                <div class="col-lg-8 col-12">
                    <div class="cost-calculator-inner">
                        <div class="row">
                            <div class="col-12">
                                <div class="section-title text-center full-width">
                                    <h1>Авторизация</h1>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-12">
                                {% for msg in app.session.flashBag.get('info') %}
                                    <div class="alert alert-success">
                                        <strong>{{ msg }}</strong>
                                    </div>
                                {% endfor %}

                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    <h1 class="h3 mb-3 font-weight-normal"Пожалуйста войдите</h1>
                                    <label for="inputEmail"></label>
                                    <input type="email" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" class="form-control" required autofocus>
                                    <label for="inputPassword"></label>
                                    <input type="password" name="password" placeholder="Пароль" id="inputPassword" class="form-control" required>

                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >

                                    {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Remember me
                                        </label>
                                    </div>
                                    #}
<div class=""><br> <button class="btn " type="submit">  Войти  </button></div>
                                    <div style="font-size: 12px; padding: 10px 0px;font-weight: bold;"><a href="{{ path('app_register') }}" class="">Регистрация</a></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 d-lg-block d-none d-lg-flex align-items-end">
                    <div class="cost-cal-sec-image-2">
                        <img src="{{ asset('assets/images/bg/cal-sec-img2.png') }}" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
